{
  "name": "google-drive-mcp",
  "version": "1.0.0",
  "description": "Google Drive CRUD server with separate OAuth server using NestJS",
  "scripts": {
    "start:auth": "nest start auth-server",
    "start:drive": "nest start drive-server",
    "start:mcp": "nest start mcp-server",
    "dev:auth": "nest start auth-server --watch",
    "dev:drive": "nest start drive-server --watch",
    "dev:mcp": "nest start mcp-server --watch",
    "build:auth": "nest build auth-server",
    "build:drive": "nest build drive-server",
    "build:mcp": "nest build mcp-server",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:drive\" \"npm run start:mcp\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@rekog/mcp-nest": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "googleapis": "^129.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "zod": "^3.22.2",
    "concurrently": "^8.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "ts-loader": "^9.4.3"
  }
} 